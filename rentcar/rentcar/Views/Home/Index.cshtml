@{
    ViewData["Title"] = "Home Page";
}

<style>
    .home-content-image {
        height: 200px;
        background-size: contain;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>

<div class="row">
    <div class="col-lg-2 col-md-3">
        <form>
            <div class="form-group">
                <label>Tanggal</label>
                <input type="date" class="form-control" />
            </div>
            <div class="form-group">
                <label>Merek</label>
                <select class="form-control"></select>
            </div>
        </form>
    </div>
    <div class="col-lg-10 col-md-9">

        <div class="row">

            <div class="col-lg-4 col-md-6">
                <div class="form-group">
                    <div class="card">
                        <div class="home-content-image" style="background-image: url(https://media.istockphoto.com/vectors/food-sketch-drawing-collection-vector-id478470378)"></div>
                        <div class="card-body">
                            <div class="mb-1">Toyota - Avansa</div>
                            <div class="mb-1"><strong>Rp. 150.000 / hari</strong></div>
                            <div class="text-muted"><span class="icon-car text-danger"></span> Matic - Biru</div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</div>
