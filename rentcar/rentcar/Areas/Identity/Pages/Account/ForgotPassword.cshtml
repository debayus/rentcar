@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}

<form method="post" class="login-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group form-group-feedback form-group-feedback-left">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Username" aria-required="true" />
        <div class="form-control-feedback">
            <i class="icon-user text-muted"></i>
        </div>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Reset Password <i class="icon-circle-right2 ml-2"></i></button>
    </div>
</form>

<div class="form-group">
    <a asp-page="./Login" class="btn btn-light btn-block">Sign in</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
